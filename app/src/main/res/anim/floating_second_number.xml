<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="3550"
        android:fromXScale="1.1"
        android:fromYScale="1.1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:toXScale="1"
        android:toYScale="1" />

    <translate
        android:duration="6500"
        android:fromXDelta="165%"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:toXDelta="-68%" />

    <translate
        android:duration="5500"
        android:fromYDelta="15%"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:toYDelta="-12%" />
</set>