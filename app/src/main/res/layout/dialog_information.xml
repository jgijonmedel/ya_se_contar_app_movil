<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_information"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/separation_medium"
    android:paddingTop="@dimen/_15sdp"
    android:paddingBottom="@dimen/separation_small">

    <LinearLayout
        android:layout_width="@dimen/_320sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/separation_small"
        android:minHeight="@dimen/btn_size_extra_small"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/btn_size_extra_small"
            android:layout_height="@dimen/btn_size_extra_small"
            android:layout_marginEnd="@dimen/separation_medium"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_succes" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans_bold"
            android:maxWidth="@dimen/_300sdp"
            android:text="@string/title"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_subTitle" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="@dimen/_20sdp"
        android:maxHeight="@dimen/_150sdp"
        android:orientation="vertical"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/separation_extra_small"
                android:fontFamily="@font/balsamiq_sans_regular"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/_1sdp"
                android:minHeight="@dimen/_40sdp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_normal"
                tools:text="texto del dialogo..." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="@dimen/width_button_semi_long"
                android:layout_height="@dimen/height_button_small"
                android:layout_marginTop="@dimen/separation_small"
                android:layout_marginBottom="@dimen/separation_extra_small"
                android:background="@drawable/btn_primary"
                android:fontFamily="@font/balsamiq_sans_bold"
                android:scaleType="fitCenter"
                android:text="@string/continue_"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>