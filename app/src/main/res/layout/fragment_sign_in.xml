<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    tools:context=".ui.fragment.login.SignInFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/separation_medium"
        android:layout_marginTop="@dimen/separation_small"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="@string/login"
        android:textColor="@color/accent_dark"
        android:textSize="@dimen/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/tg_age_mode"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/separation_medium"
        android:layout_marginTop="@dimen/separation_small"
        android:background="@drawable/toggle_age_mode"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/separation_medium"
        android:layout_marginBottom="@dimen/separation_small"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <!--Container Password Child-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_mode_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_subtitle_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans_bold"
                android:text="@string/select_your_password"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_subTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <GridLayout
                android:id="@+id/container_images_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/separation_small"
                android:layout_marginBottom="@dimen/separation_extra_small"
                android:columnCount="6"
                android:rowCount="2"
                app:layout_constraintBottom_toTopOf="@+id/tv_tag_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_child">

                <!--First ROW  -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_bee"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_eagle"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_butterfly"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_kite"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_balloon"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="5"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_airballoon"
                    android:tag="deselected" />
                <!--End First ROW-->

                <!--Second ROW-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_helicopter"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_airplane"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_heroe"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_rocket"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="4"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_sun"
                    android:tag="deselected" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="5"
                    android:layout_columnWeight="1"
                    android:padding="@dimen/separation_extra_small"
                    android:src="@drawable/ic_pass_ufo"
                    android:tag="deselected" />
                <!--End Second ROW-->
            </GridLayout>

            <TextView
                android:id="@+id/tv_tag_password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button_medium"
                android:fontFamily="@font/balsamiq_sans_regular"
                android:gravity="center"
                android:text="@string/password"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_subTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/container_preview_password"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_button_medium"
                android:layout_marginStart="@dimen/separation_small"
                android:layout_marginEnd="@dimen/width_button_long"
                android:gravity="fill_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_tag_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--End Container Password Child-->

        <!--Container Password Adult-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_mode_adult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_subtitle_adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiq_sans_bold"
                android:text="@string/write_your_user_and_password"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_subTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_adult">

                <EditText
                    android:id="@+id/et_nick_name"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/separation_small"
                    android:autofillHints="true"
                    android:background="@drawable/login_edit_text"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="@dimen/separation_small"
                    android:fontFamily="@font/balsamiq_sans_regular"
                    android:hint="@string/user"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text"
                    android:maxLength="15"
                    android:paddingHorizontal="@dimen/separation_small"
                    android:paddingVertical="@dimen/separation_extra_small"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/black_25"
                    android:textSize="@dimen/text_subTitle" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/separation_small"
                    android:autofillHints="true"
                    android:background="@drawable/login_edit_text"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/separation_small"
                    android:fontFamily="@font/balsamiq_sans_regular"
                    android:hint="@string/password"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingHorizontal="@dimen/separation_small"
                    android:paddingVertical="@dimen/separation_extra_small"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/black_25"
                    android:textSize="@dimen/text_subTitle" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_up"
                android:layout_width="@dimen/width_button_long"
                android:layout_height="@dimen/height_button_medium"
                android:background="@drawable/btn_sign_up_bubble"
                android:fontFamily="@font/balsamiq_sans_bold"
                android:scaleType="fitCenter"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_subTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--End Container Password Adult-->

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_sign_in"
        android:layout_width="@dimen/width_button_short"
        android:layout_height="@dimen/height_button_medium"
        android:layout_marginHorizontal="@dimen/separation_medium"
        android:layout_marginBottom="@dimen/separation_small"
        android:background="@drawable/btn_next_bubble"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>