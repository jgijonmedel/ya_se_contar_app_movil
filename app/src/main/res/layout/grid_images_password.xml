<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/preview_password"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/separation_long"
        android:layout_marginTop="@dimen/separation_small"
        android:background="@drawable/bg_et_login"
        android:gravity="center"
        android:orientation="horizontal" />

    <GridLayout
        android:id="@+id/grid_images_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/width_button_shorted"
        android:layout_marginTop="@dimen/separation_small"
        android:layout_marginBottom="@dimen/separation_extra_small"
        android:layout_weight="95"
        android:columnCount="6"
        android:rowCount="2">

        <!--First ROW  -->
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_bee"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_eagle"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_butterfly"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_kite"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_balloon"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_airballoon"
            android:tag="deselected" />
        <!--End First ROW-->

        <!--Second ROW-->
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_helicopter"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_airplane"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_heroe"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_rocket"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_sun"
            android:tag="deselected" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:padding="@dimen/separation_extra_small"
            android:src="@drawable/ic_pass_ufo"
            android:tag="deselected" />
        <!--End Second ROW-->
    </GridLayout>
</LinearLayout>